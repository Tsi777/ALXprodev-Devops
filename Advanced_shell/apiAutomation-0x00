#!/bin/bash

# Define the API URL and output files
API_URL="https://pokeapi.co/api/v2/pokemon/25/"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request and save the response
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check if the request was successful
if [ "$response" -ne 200 ]; then
    echo "Error: Unable to retrieve data (HTTP status code: $response)" >> "$ERROR_FILE"
else
    echo "Data successfully saved to $OUTPUT_FILE"
fi
