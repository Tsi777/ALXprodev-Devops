#!/bin/bash

# Create a directory to store the Pokémon data if it doesn't exist
mkdir -p pokemon_data

# List of Pokémon to retrieve
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Loop through each Pokémon
for POKE in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $POKE..."
    
    # Retrieve data from the API
    RESPONSE=$(curl -s "https://pokeapi.co/api/v2/pokemon/${POKE}")

    # Check if the request was successful
    if [[ $? -eq 0 ]]; then
        # Save the response to a JSON file
        echo "$RESPONSE" > "pokemon_data/${POKE}.json"
        echo "Saved data to pokemon_data/${POKE}.json ✅"
    else
        echo "Failed to fetch data for $POKE ❌"
    fi

    # Wait for 1 second to prevent rate-limiting issues
    sleep 1
done
